
 <% invalid = @user.errors.include?(:email) %>

<div class="container mx-auto pb-10 mt-10 flex items-center justify-center md:shadow-lg mb-10">
  <%= image_tag "book_icon.png", class: 'lg:w-3/5 md:w-1/2 hidden lg:block md:block' %>

<div class="lg:w-2/6 md:w-1/2 flex flex-col items-center justify-center bg-white rounded-lg overflow-hidden bg-gray-200 pb-10">
  <h3 class="bg-blue-600 py-5 text-white font-bold w-full text-center shadow hover:shadow-lg">LET'S GET YOU AN ACCOUNT! ðŸ¤—</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <div class="my-4 px-10 mt-10">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Full name
      </label>
      <%= f.text_field :name, placeholder: "full name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
       <% if invalid %>
        <div class="text-red-600">
            <% @user.errors.full_messages_for(:name).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        </div>
       <% end %>
    </div>

    <div class="my-4 px-10">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Email
      </label>
      <%= f.email_field :email, placeholder: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
       <% if invalid %>
        <div class="text-red-600">
            <% @user.errors.full_messages_for(:email).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        </div>
       <% end %>
    </div>

    <div class="mb-6 px-10">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Password
      </label>
      <div class="relative">
         <%= f.password_field :password, id: "password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "confirm password" %>
         <i id="visibility_btn_one"><span id="icon_one" class="cursor-pointer material-symbols-outlined absolute inset-y-0 right-0 grid place-content-center px-4">visibility_off</span></i>
      </div>
      <% if invalid %>
        <div class="text-red-600">
            <% @user.errors.full_messages_for(:password).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        </div>
       <% end %>
    </div>

    <div class="mb-6 px-10">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Confirm Password
      </label>
      <div class="relative">
         <%= f.password_field :password_confirmation, id: "confirm_password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "confirm password" %>
        <i id="visibility_btn_two"><span id="icon_two" class="cursor-pointer material-symbols-outlined absolute inset-y-0 right-0 grid place-content-center px-4">visibility_off</span></i>
      </div>
      <% if invalid %>
        <div class="text-red-600">
            <% @user.errors.full_messages_for(:password).each do |error_message| %>
              <%= error_message %>.
            <% end %>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-10">
      <%= f.submit "SIGN UP", class: "bg-blue-600 text-white px-28 rounded-full py-2 font-bold cursor-pointer shadow hover:shadow-lg" %>
    </div>


  <div class="text-center mt-12">
    <p class="mb-5 text-gray-700 text-md font-bold">You already have an account!</p>
    <%= link_to "SIGN IN", new_session_path(resource_name), class: 'text-blue-600 font-bold cursor-pointer' %>
  </div>

  </div>
  <% end %>
  </div>
 </div>
</div>
