<% if flash[:notice] %>
  <div data-controller="flash" role="alert" class="flex items-center gap-4 fixed my-4 mx-4 self-center rounded-xl border border-gray-100 p-4 shadow-xl">
    <span class="text-green-600">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
    </span>

    <div class="flex item-center">
      <strong class="font-bold mr-3">Success.</strong>
      <p class="mt-1 text-sm tracking-wide text-gray-700"> <%= notice %> üéâ</p>
    </div>

    <button data-action="flash#dismiss" type="button" class="text-gray-500 transition hover:text-gray-600 self-end">
         <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </button>
  </div>
<% end %>

