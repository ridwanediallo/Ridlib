<div class="lg:w-4/5 mx-auto">
     <hr class="mb-4 text:blue-600">
  <div class="lg:w-2/4 mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
    <%= form_for(@comment, url: create_comment_book_path(@book.book_id)) do |f| %>
       <div class="px-4 py-2 bg-white rounded-t-lg dark:bg-gray-800">
           <%= f.hidden_field :book_id, value: @book.book_id %>
           <%= f.text_area :comment, class: "w-full px-0 text-sm text-gray-900 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400" ,placeholder: "Enter your comment here..." %>
       </div>
       <div class="flex items-center justify-between px-3 py-2 border-t dark:border-gray-600">
           <%= f.submit "Add Comment", class: "flex ml-auto text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded" %>
       </div>
     <% end %>
</div>


 <% @book.comments.each do |comment| %>
    <div class="mb-4">
       <p class="leading-relaxed"><%= comment.comment %></p>
       <strong class="leading-relaxed italic"><%= comment.user.name %></strong>
       <p><%= comment.created_at.to_fs(:short) %></p>
     </div>
  <%end %>
</div>
