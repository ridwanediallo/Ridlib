<div id="<%= dom_id author %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= author.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bio:</strong>
    <%= author.bio %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Createdat:</strong>
    <%= author.createdAt %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Updatedat:</strong>
    <%= author.updatedAt %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this author", author, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this author', edit_author_path(author), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
